.container {
    padding: 20rpx;
}

.add-btn {
    margin-bottom: 20rpx;
}

.category-list {
    background-color: #fff;
    border-radius: 12rpx;
    overflow: hidden;
}

.category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.category-name {
    font-size: 32rpx;
    color: #333;
}

.operate-btn button {
    margin-left: 15rpx;
}

.input-category {
    padding: 15rpx;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    margin-top: 10rpx;
}
