<view class="container">
  <!-- 物品名称 -->
  <view class="form-item">
    <label>物品名称：</label>
    <input placeholder="请输入物品名称" value="{{itemName}}" bindinput="inputItemName"></input>
  </view>

  <!-- 分类选择 -->
  <view class="form-item">
    <label>分类：</label>
    <picker mode="selector" range="{{categoryList}}" range-key="name" value="{{categoryIndex}}" bindchange="changeCategory">
      <view class="picker-view">{{categoryList[categoryIndex]?.name || '请选择分类'}}</view>
    </picker>
  </view>

  <!-- 购买日期 -->
  <view class="form-item">
    <label>购买日期：</label>
    <picker mode="date" value="{{buyDate}}" bindchange="changeBuyDate">
      <view class="picker-view">{{buyDate || '请选择购买日期'}}</view>
    </picker>
  </view>

  <!-- 备注 -->
  <view class="form-item">
    <label>备注：</label>
    <textarea placeholder="请输入物品备注（可选）" value="{{remark}}" bindinput="inputRemark"></textarea>
  </view>

  <!-- 图片上传 -->
  <view class="form-item">
    <label>物品图片：</label>
    <view class="img-upload">
      <block wx:for="{{imgList}}" wx:key="index">
        <image src="{{item}}" mode="widthFix" bindtap="previewImg" data-index="{{index}}"></image>
        <button size="mini" type="warn" bindtap="deleteImg" data-index="{{index}}">删除</button>
      </block>
      <button type="default" bindtap="chooseImg" wx:if="{{imgList.length < 3}}">+ 上传图片</button>
    </view>
  </view>

  <!-- 提交按钮 -->
  <button type="primary" bindtap="submitItem" class="submit-btn">保存物品</button>
</view>