.container {
    padding: 20rpx;
}

.filter-bar {
    margin-bottom: 20rpx;
}

.filter-picker {
    padding: 15rpx;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    text-align: center;
}

.item-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
}

.item-card {
    width: calc((100% - 20rpx) / 2);
    border: 1rpx solid #f5f5f5;
    border-radius: 12rpx;
    overflow: hidden;
}

.item-card image {
    width: 100%;
    height: 180rpx;
    object-fit: cover;
}

.item-info {
    padding: 15rpx;
}

.item-name {
    font-size: 32rpx;
    font-weight: 500;
    display: block;
    margin-bottom: 10rpx;
}

.item-category,
.item-date {
    font-size: 24rpx;
    color: #666;
    display: block;
    margin-bottom: 5rpx;
}

.empty-state {
    text-align: center;
    margin-top: 200rpx;
}

.empty-state image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}

.empty-state text {
    font-size: 28rpx;
    color: #999;
}
